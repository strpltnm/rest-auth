generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @unique
  password String
  sessions Session[]
}

model Session {
  id          Int      @id @default(autoincrement())
  accessToken String
  refresh     String
  expiresIn   DateTime
  fingerprint String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}

model File {
  id         Int      @id @default(autoincrement())
  name       String
  extension  String
  mimeType   String
  size       Int
  uploadDate DateTime @default(now())
  filePath   String
}
